#mNav
  padding-top 0
  padding-bottom 0
  min-height 56px
  background -webkit-linear-gradient(rgba(0, 0, 0, 0.6), rgba(255, 255, 255, 0.4))
  border-bottom none
  background-color transparent
  -webkit-transition background-color 0.3s ease-in-out
  transition background-color 0.3s ease-in-out
  z-index 3
  .navbar-nav
    .nav-item
      font-family 'Varela Round'
      font-size 1rem
      letter-spacing 0.6rem
      background -webkit-linear-gradient(rgba(0, 0, 0, 0.9), rgba(255, 255, 255, 0.1))
      -webkit-text-fill-color transparent
      -webkit-background-clip text
      &:hover
        color fade(white, 80%)
        outline none
        background-color transparent
        -webkit-text-fill-color unset
  .nav-link
    -webkit-transition none
    transition none
    padding 2rem 1.5rem
    color rgba(255, 255, 255, 0.5)
    &:hover
      color rgba(255, 255, 255, 0.75)
    &:active
      color white
  &.navbar-shrink
    background-color #fff
    .nav-link
      color #161616
      padding-right 1.5rem
      padding-bottom 0.5rem
      border-bottom 0.25rem solid transparent
      &:hover
        color #64a19d
      &:active
        color #467370
      &.active
        color #64a19d
        outline none
        border-bottom 0.25rem solid #64a19d

@media (min-width: 276px)
  #mNav
    .navbar-nav
      .nav-item
        letter-spacing 0

@media (min-width: 576px)
  #mNav
    .navbar-nav
      .nav-item
        letter-spacing 0.6rem

#mNav .navbar-nav .nav-item:active,
#mNav .navbar-nav .nav-item:focus
  outline none
  background-color transparent

.centered
  position absolute
  bottom 20%
  left 50%
  transform translate(-50%, 0)
  background linear-gradient(to bottom, rgba(76, 76, 76, 0.53) 0%, rgba(76, 76, 76, 0.7) 0%, rgba(89, 89, 89, 0.7) 100%)
  z-index 2

@media (min-width: 276px)
  .centered
    bottom 5%

@media (min-width: 576px)
  .centered
    bottom 20%

header
  .text-uppercase
    font-family 'Varela Round'
    font-size 2.5rem
    line-height 2.5rem
    letter-spacing 0.6rem
    background -webkit-linear-gradient(rgba(255, 255, 255, .9), rgba(255, 255, 255, 0))
    -webkit-text-fill-color transparent
    -webkit-background-clip text

.carousel-item
  height 100vh
  background-size cover
  background-repeat no-repeat
  background-position center center
  background-attachment scroll
  z-index 1

for num in (1..14)
  .carousel-item-{num}
    background-image url('../img/carousel-item-' + num + '.jpg' )

@media (max-width: 1280px)
  for num in (1..14)
    .carousel-item-{num}
      background-image url('../img/carousel-item-' + num + '-1280w.jpg' )

